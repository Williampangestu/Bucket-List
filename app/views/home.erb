<body class="screen">
<%=erb :_navbar, locals: {user: @user}%>

<div class="navbar">
  <h1 id="trending" ><i class="fa fa-line-chart"></i>  TRENDING</h1>
</div><br>

<div class="content">

  <%@goal.each do |goal|%>
    <div id="<%=goal.id%>" class="<%=@user.id%> container">
      <a href="/users/<%=@user.id%>/goals/<%=goal.id%>"><div class="list" style="background-image: url(<%=goal.picture%>)"></div></a>
      <p class="text"><%=goal.title%></p>
      <p class="name"><i class="fa fa-user"></i> <%=goal.creator%></p>
      <div class ="button">
        <ul>
          <li><button class="like"><i class="fa fa-thumbs-up"></i> <%=goal.likes%></button></li>
          <li><button class="join"><i class="fa fa-child"></i> LET'S DO IT!</button></li>
          <li><%=goal.users.count%> People Are Going</li>
        </ul>
      </div>
    </div>
  <% end %>

</div>

</body>